/* This program calculate the discount price on purchase amount and determine if it has discounts or not. Also prints the calculated discounted price.
   Name: Christian A. Osorno
   Date: February 18, 2024
*/
import java.util.Scanner;

public class OrderChecker //Class Name
 {  
    public static void main(String[] args) 
    {
        Scanner scan = new Scanner(System.in); //Declaration of Scanner
        
        //Final Declaration
        final static int BOLT_PRICE = 5;     
        final static int NUT_PRICE = 3;      
        final static int WASHER_PRICE = 1; 

        //Input
        System.out.print("Number of bolts: ");
        int numBolts = scan.nextInt();

        System.out.print("Number of nuts: ");
        int numNuts = scan.nextInt();

        System.out.print("Number of washers: ");
        int numWashers = scan.nextInt();

        //Process for the total cost
        int totalCost = (numBolts * BOLT_PRICE) + (numNuts * NUT_PRICE) + (numWashers * WASHER_PRICE);

        //Declaration of Order Status 
        String orderStatus = checkOrder(numBolts, numNuts, numWashers);

        //Output
        System.out.println(orderStatus);
        System.out.println("Total cost: " + totalCost + " cents");
    }


    private static String checkOrder(int bolts, int nuts, int washers) {
        String errorMessage = "";

        if (nuts < bolts) {
            errorMessage += "Check the Order: too few nuts\n";
        }
        
        if (washers < 2 * bolts) {
            errorMessage += "Check the Order: too few washers\n";
        }


        return errorMessage.isEmpty() ? "Order is OK." : errorMessage;
    }
}
